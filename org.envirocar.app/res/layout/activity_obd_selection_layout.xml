<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_obd_selection_layout_toolbar"
        style="@style/ToolBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_dark_cario"
        android:elevation="6dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/help_button"
            android:layout_width="@dimen/image_icon_xs"
            android:layout_height="@dimen/image_icon_xs"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/ic_info_black_24dp"
            android:backgroundTint="@color/white_cario" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/activity_obd_selection_layout_enablebt_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/blue_dark_cario"
        android:elevation="6dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="@dimen/spacing_large"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_obd_selection_layout_enablebt_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bluetooth is enabled"
                android:textColor="@color/white_cario"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Switch
                android:id="@+id/activity_obd_selection_layout_enablebt_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/obd_selection_help_text"
        android:textSize="@dimen/subtext" />

    <FrameLayout
        android:id="@+id/activity_obd_selection_layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>