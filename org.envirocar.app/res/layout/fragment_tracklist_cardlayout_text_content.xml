<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/track_details_attributes_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Your Afternoon Ride"
        android:textColor="#000000"
        android:textSize="@dimen/heading3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/track_details_attributes_header_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/roboto_medium"
        android:text="A 170"
        android:textSize="@dimen/subtitle"
        app:layout_constraintStart_toStartOf="@+id/track_details_attributes_header_title"
        app:layout_constraintTop_toBottomOf="@+id/track_details_attributes_header_title" />

    <TextView
        android:id="@+id/track_details_attributes_header_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:alpha="0.9"
        android:fontFamily="@font/roboto"
        android:text="May 21, 2019"
        android:textColor="#000000"
        android:textSize="@dimen/subtext"
        app:layout_constraintBottom_toTopOf="@+id/timeBox"
        app:layout_constraintEnd_toStartOf="@+id/track_details_attributes_image_distance"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/track_details_attributes_image_date"
        app:layout_constraintTop_toBottomOf="@+id/track_details_attributes_header_car" />

    <LinearLayout
        android:id="@+id/timeBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/track_details_attributes_header_date"
        app:layout_constraintTop_toBottomOf="@+id/track_details_attributes_header_date">

        <TextView
            android:id="@+id/track_details_attributes_header_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:alpha="0.9"
            android:fontFamily="@font/roboto"
            android:text="2:30"
            android:textColor="#000000"
            android:textSize="@dimen/subtext" />

        <TextView
            android:id="@+id/track_details_attributes_header_time_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/raleway_semibold"
            android:text="PM"
            android:textAllCaps="true"
            android:textSize="@dimen/subtext" />
    </LinearLayout>

    <ImageView
        android:id="@+id/track_details_attributes_image_date"
        android:layout_width="@dimen/image_icon_xs"
        android:layout_height="@dimen/image_icon_xs"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/track_details_attributes_header_date"
        app:layout_constraintEnd_toStartOf="@+id/track_details_attributes_header_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/track_details_attributes_header_date"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/calendar" />

    <ImageView
        android:id="@+id/track_details_attributes_image_time"
        android:layout_width="@dimen/image_icon_s"
        android:layout_height="@dimen/image_icon_s"
        app:layout_constraintBottom_toBottomOf="@+id/timeBox"
        app:layout_constraintEnd_toEndOf="@+id/track_details_attributes_image_date"
        app:layout_constraintStart_toStartOf="@+id/track_details_attributes_image_date"
        app:layout_constraintTop_toTopOf="@+id/timeBox"
        app:srcCompat="@drawable/afternoon" />

    <ImageView
        android:id="@+id/track_details_attributes_header_options"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_info_black_24dp" />

    <ImageView
        android:id="@+id/track_details_attributes_image_distance"
        android:layout_width="@dimen/image_icon_xs"
        android:layout_height="@dimen/image_icon_xs"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/distanceBox"
        app:layout_constraintEnd_toStartOf="@+id/distanceBox"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/track_details_attributes_header_date"
        app:layout_constraintTop_toTopOf="@+id/distanceBox"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/distanceoftrack" />

    <LinearLayout
        android:id="@+id/distanceBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:alpha="0.75"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/track_details_attributes_header_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/track_details_attributes_image_distance"
        app:layout_constraintTop_toTopOf="@+id/track_details_attributes_header_date">

        <TextView
            android:id="@+id/track_details_attributes_header_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:alpha="0.9"
            android:fontFamily="@font/roboto"
            android:text="2.06"
            android:textColor="#000000"
            android:textSize="@dimen/subtext" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/raleway_semibold"
            android:text="KM"
            android:textSize="@dimen/subtext" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/durationBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.75"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/timeBox"
        app:layout_constraintStart_toStartOf="@+id/distanceBox"
        app:layout_constraintTop_toTopOf="@+id/timeBox">

        <TextView
            android:id="@+id/track_details_attributes_header_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:alpha="0.9"
            android:fontFamily="@font/roboto"
            android:text="5:00"
            android:textColor="#000000"
            android:textSize="@dimen/subtext" />

        <TextView
            android:id="@+id/track_details_attributes_header_duration_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            android:text="M"
            android:textSize="@dimen/subtext" />
    </LinearLayout>

    <ImageView
        android:id="@+id/track_details_attributes_image_duration"
        android:layout_width="@dimen/image_icon_xs"
        android:layout_height="@dimen/image_icon_xs"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/durationBox"
        app:layout_constraintStart_toStartOf="@+id/track_details_attributes_image_distance"
        app:layout_constraintTop_toTopOf="@+id/durationBox"
        app:srcCompat="@drawable/duration" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_tracklist_cardlayout_toolbar"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:background="#00000000"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="@+id/track_details_attributes_header_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="track_details_attributes_header_title,track_details_attributes_header_car"
        tools:layout_editor_absoluteX="320dp" />


</androidx.constraintlayout.widget.ConstraintLayout>