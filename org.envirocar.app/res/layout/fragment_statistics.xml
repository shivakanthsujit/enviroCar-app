<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.statistics.StatisticsFragment">

    <ImageView
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#0065A0"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/no_user_layout" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.116" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/no_user_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:layout_editor_absoluteY="470dp">

        <ImageView
            android:id="@+id/no_user_img"
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:src="@drawable/no_user"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45" />

        <TextView
            android:id="@+id/no_user_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/no_user_text"
            android:textColor="#9C9C9C"
            android:textSize="@dimen/subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/no_user_img" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/stat_card"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:visibility="visible"
        app:cardCornerRadius="14dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loading_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <TextView
                android:id="@+id/stat_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F9F9F9"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="@string/track_list_loading_tracks"
                android:textColor="#9900659F"
                android:textSize="@dimen/xxlarge_text"
                android:visibility="visible"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageView
                android:id="@+id/loading_icon"
                android:layout_width="@dimen/image_icon_s"
                android:layout_height="@dimen/image_icon_s"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:padding="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_refresh_black_24dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/message_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/message_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/stat_no_tracks"
                android:textColor="#0065A0"
                android:textSize="@dimen/headline_text"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/message_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/stats_no_tracks_desc"
                android:textColor="#000000"
                android:textSize="@dimen/subtitle"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/message_header" />

            <ImageView
                android:id="@+id/message_icon"
                android:layout_width="@dimen/image_icon_s"
                android:layout_height="@dimen/image_icon_s"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:padding="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_refresh_black_24dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tracks_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/stat_last_track_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/stat_lasttrack_header"
                android:textColor="#0065A0"
                android:textSize="@dimen/headline_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/stat_track_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/stat_testheader"
                android:textColor="#000000"
                android:textSize="@dimen/heading3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stat_last_track_header" />

            <TextView
                android:id="@+id/stat_track_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textSize="@dimen/subtext"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stat_track_name" />

            <TextView
                android:id="@+id/stat_track_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="104dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textSize="@dimen/subtext"
                app:layout_constraintStart_toEndOf="@+id/stat_track_date"
                app:layout_constraintTop_toBottomOf="@+id/stat_track_name" />

            <TextView
                android:id="@+id/stat_fuel_consum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/roboto_light"
                android:text="TextView"
                android:textSize="@dimen/subtext"
                app:layout_constraintBottom_toTopOf="@+id/stat_avg_speed"
                app:layout_constraintStart_toEndOf="@+id/imageView" />

            <TextView
                android:id="@+id/stat_avg_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/roboto_light"
                android:text="TextView"
                android:textSize="@dimen/subtext"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView2" />

            <TextView
                android:id="@+id/stat_comp_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/roboto_light"
                android:text="TextView"
                android:textSize="@dimen/subtext"
                app:layout_constraintBottom_toTopOf="@+id/stat_comp_speed"
                app:layout_constraintEnd_toStartOf="@+id/stat_img_comp_fuel" />

            <TextView
                android:id="@+id/stat_comp_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/roboto_light"
                android:text="TextView"
                android:textSize="@dimen/subtext"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/stat_img_comp_speed" />

            <TextView
                android:id="@+id/stat_info"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="32dp"
                android:lineSpacingExtra="4sp"
                android:text="@string/stat_info"
                android:textSize="@dimen/subtext"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/image_icon_s"
                android:layout_height="@dimen/image_icon_s"
                android:layout_marginStart="24dp"
                android:src="@drawable/fuel"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/stat_fuel_consum"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/stat_fuel_consum" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/image_icon_s"
                android:layout_height="@dimen/image_icon_s"
                android:layout_marginStart="24dp"
                android:src="@drawable/avg_speed"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/stat_avg_speed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/stat_avg_speed"
                app:layout_constraintVertical_bias="0.416" />

            <ImageView
                android:id="@+id/stat_img_comp_fuel"
                android:layout_width="@dimen/image_icon_s"
                android:layout_height="@dimen/image_icon_s"
                android:layout_marginEnd="16dp"
                android:src="@drawable/arrow_up"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/stat_comp_fuel"
                app:layout_constraintEnd_toStartOf="@+id/stat_info"
                app:layout_constraintTop_toTopOf="@+id/stat_comp_fuel" />

            <ImageView
                android:id="@+id/stat_img_comp_speed"
                android:layout_width="@dimen/image_icon_s"
                android:layout_height="@dimen/image_icon_s"
                android:layout_marginEnd="16dp"
                android:src="@drawable/arrow_down"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/stat_comp_speed"
                app:layout_constraintEnd_toStartOf="@+id/stat_info"
                app:layout_constraintTop_toTopOf="@+id/stat_comp_speed" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.43" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/stat_scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:fillViewport="true"
        android:scrollbarStyle="insideOverlay"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stat_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <Spinner
                android:id="@+id/stat_graph_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:entries="@array/stat_array"
                android:gravity="center_horizontal"
                android:padding="5dp" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/stat_tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="#3D93C6"
                app:tabIndicatorHeight="3dp">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monday" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuesday" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wednesday" />
            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/stat_viewPager"
                android:layout_width="match_parent"
                android:layout_height="400dp">

            </androidx.viewpager.widget.ViewPager>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/header_gradient"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/header_gradient_dashboard"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/guideline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/enviroCar_img"
        android:layout_width="310dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/img_envirocar_logo_white"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>