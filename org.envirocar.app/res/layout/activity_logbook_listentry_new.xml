<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    app:cardBackgroundColor="@color/white_cario"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/activity_logbook_listentry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="Do., 05.11.2015"
            android:textColor="#000000"
            android:textSize="@dimen/heading3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_logbook_listentry_car" />

        <TextView
            android:id="@+id/activity_logbook_listentry_kmliter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="31.820 km  -  56,54 l"
            android:textSize="@dimen/subtext"
            app:layout_constraintEnd_toEndOf="@+id/activity_logbook_listentry_date"
            app:layout_constraintTop_toBottomOf="@+id/activity_logbook_listentry_date" />

        <TextView
            android:id="@+id/activity_logbook_listentry_totalprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="right"
            android:text="35,00 €"
            android:textColor="@color/blue_dark_cario"
            android:textSize="@dimen/heading3"
            app:layout_constraintBottom_toTopOf="@+id/activity_logbook_listentry_priceperliter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_logbook_listentry_kmliter" />

        <TextView
            android:id="@+id/activity_logbook_listentry_priceperliter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="right"
            android:text="1,32 €/l"
            android:textSize="@dimen/subtitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/activity_logbook_listentry_totalprice" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="@dimen/image_icon_s"
            android:layout_height="@dimen/image_icon_s"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_drive_eta_black_24dp"
            android:tint="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/activity_logbook_listentry_car"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="Mercedes-Benz A 170"
            android:textColor="#000000"
            android:textSize="@dimen/subtitle"
            app:layout_constraintBottom_toBottomOf="@+id/imageView10"
            app:layout_constraintEnd_toStartOf="@+id/activity_logbook_listentry_date"
            app:layout_constraintStart_toEndOf="@+id/imageView10"
            app:layout_constraintTop_toTopOf="@+id/imageView10" />

        <TextView
            android:id="@+id/activity_logbook_listentry_car_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="(2004 / 1699ccm)"
            android:textSize="@dimen/subtext"
            app:layout_constraintStart_toStartOf="@+id/activity_logbook_listentry_car"
            app:layout_constraintTop_toBottomOf="@+id/activity_logbook_listentry_car" />

        <LinearLayout
            android:id="@+id/activity_logbook_listentry_comment_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/activity_logbook_listentry_priceperliter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_logbook_listentry_missedfillup">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:alpha="0.54"
                android:src="@drawable/ic_comment_black_24dp" />

            <TextView
                android:id="@+id/activity_logbook_listentry_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:gravity="center_vertical"
                android:text="Dies ist ein Kommentar"
                android:textSize="@dimen/subtext" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_logbook_listentry_fillup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_logbook_listentry_car_sub">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:alpha="0.54"
                android:src="@drawable/ic_check_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:gravity="center_vertical"
                android:text="Partial Fill-up"
                android:textSize="@dimen/subtext" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_logbook_listentry_missedfillup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_logbook_listentry_fillup">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:alpha="0.54"
                android:src="@drawable/ic_check_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:gravity="center_vertical"
                android:text="Missed previous Fill-up"
                android:textSize="@dimen/subtext" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>