<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/obdPlusGPSButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/header_gradient_dashboard" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:src="@drawable/img_envirocar_logo_white"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.115" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/dashBoardUserImage"
                android:layout_width="@dimen/image_icon_m"
                android:layout_height="@dimen/image_icon_m"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_account_circle_black_48dp" />

            <TextView
                android:id="@+id/dashBoardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/roboto_medium"
                android:text="User Name"
                android:textColor="#000000"
                android:textSize="@dimen/heading3"
                app:layout_constraintBottom_toBottomOf="@+id/dashBoardUserImage"
                app:layout_constraintStart_toEndOf="@+id/dashBoardUserImage"
                app:layout_constraintTop_toTopOf="@+id/dashBoardUserImage" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/roboto_medium"
                android:text="TextView"
                android:textSize="@dimen/subtext"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/userTotalDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/roboto_medium"
                android:text="0.0"
                android:textColor="#000000"
                android:textSize="@dimen/headline_text"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/userTotalDuration"
                app:layout_constraintEnd_toStartOf="@+id/textView12"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textView14"
                app:layout_constraintTop_toTopOf="@+id/userTotalDuration" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/roboto_medium"
                android:text="KM"
                android:textSize="@dimen/subtext"
                app:layout_constraintBaseline_toBaselineOf="@+id/userTotalDistance"
                app:layout_constraintEnd_toEndOf="@+id/textView14"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/userTotalDistance" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Total Distance"
                android:textSize="@dimen/subtext"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView7" />

            <TextView
                android:id="@+id/userTotalDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/roboto_medium"
                android:text="00:00"
                android:textColor="#000000"
                android:textSize="@dimen/headline_text"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/userTrackCount"
                app:layout_constraintEnd_toStartOf="@+id/userTotalDurationAdd"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/userTrackCount" />

            <TextView
                android:id="@+id/userTotalDurationAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/roboto_medium"
                android:text="H"
                android:textSize="@dimen/subtext"
                app:layout_constraintBaseline_toBaselineOf="@+id/userTotalDuration"
                app:layout_constraintEnd_toEndOf="@+id/textView7"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/userTotalDuration" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Total Duration"
                android:textSize="@dimen/subtext"
                app:layout_constraintBottom_toBottomOf="@+id/textView16"
                app:layout_constraintEnd_toStartOf="@+id/textView14"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView16" />

            <TextView
                android:id="@+id/userTrackCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto_medium"
                android:text="0"
                android:textColor="#000000"
                android:textSize="@dimen/headline_text"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView16"
                app:layout_constraintEnd_toEndOf="@+id/textView16"
                app:layout_constraintStart_toStartOf="@+id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/dashBoardName" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:text="User Tracks"
                android:textSize="@dimen/subtext"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView7"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/userStatisticsGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="textView7,userTotalDistance,userTotalDuration,textView12,userTotalDurationAdd,textView14,textView16,userTrackCount,dashBoardUserImage,dashBoardName" />

            <Button
                android:id="@+id/signInInitiatorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_outline"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="30dp"
                android:paddingTop="12dp"
                android:paddingRight="30dp"
                android:paddingBottom="12dp"
                android:text="@string/action_sign_in_short"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/registerInitiatorButton"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView19" />

            <Button
                android:id="@+id/registerInitiatorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_outline"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="30dp"
                android:paddingTop="12dp"
                android:paddingRight="30dp"
                android:paddingBottom="12dp"
                android:text="@string/action_sign_in_register"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/signInInitiatorButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/signInInitiatorButton"
                app:layout_constraintTop_toTopOf="@+id/signInInitiatorButton" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/dashboard_signin_prompt"
                android:textColor="#000000"
                android:textSize="@dimen/heading3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/userLoginSignupButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="signInInitiatorButton,registerInitiatorButton,textView19" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/obdPlusGPSButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/roboto_medium"
        android:paddingLeft="24dp"
        android:paddingTop="14dp"
        android:paddingRight="24dp"
        android:paddingBottom="10dp"
        android:text="OBD + GPS"
        android:textColor="#000000"
        android:textSize="@dimen/subtitle"
        app:layout_constraintEnd_toStartOf="@+id/GPSOnlyButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <TextView
        android:id="@+id/obdPlusGPSLineIndicator"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#167FC1"
        app:layout_constraintEnd_toEndOf="@+id/obdPlusGPSButton"
        app:layout_constraintStart_toStartOf="@+id/obdPlusGPSButton"
        app:layout_constraintTop_toBottomOf="@+id/obdPlusGPSButton" />

    <Button
        android:id="@+id/GPSOnlyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:paddingLeft="24dp"
        android:paddingTop="14dp"
        android:paddingRight="24dp"
        android:paddingBottom="10dp"
        android:text="GPS Only"
        android:textColor="#000000"
        android:textSize="@dimen/subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/obdPlusGPSButton"
        app:layout_constraintTop_toTopOf="@+id/obdPlusGPSButton" />

    <TextView
        android:id="@+id/GPSLineIndicator"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#167FC1"
        app:layout_constraintEnd_toEndOf="@+id/GPSOnlyButton"
        app:layout_constraintStart_toStartOf="@+id/GPSOnlyButton"
        app:layout_constraintTop_toBottomOf="@+id/GPSOnlyButton" />

    <LinearLayout
        android:id="@+id/buttonBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@+id/obdPlusGPSLineIndicator"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/bannerBluetoothContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:padding="4dp"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/dashboard_selector"
                    android:layout_height="@dimen/dashboard_selector"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_dashboard_circle"
                    android:padding="10dp"
                    android:src="@drawable/ic_bluetooth_black_24dp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/errorImageBluetooth"
                    android:layout_width="@dimen/dashboard_selector"
                    android:layout_height="@dimen/dashboard_selector"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_dashboard_circle"
                    android:padding="10dp"
                    android:src="@drawable/bluetooth_error"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/okImageBluetooth"
                    android:layout_width="@dimen/dashboard_selector"
                    android:layout_height="@dimen/dashboard_selector"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_dashboard_connected_circle"
                    android:padding="10dp"
                    android:src="@drawable/bluetooth_connected"
                    android:tint="@color/common_google_signin_btn_text_dark_focused"
                    android:visibility="gone" />


            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bannerOBDAdapterContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:padding="4dp"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/dashboard_selector"
                    android:layout_height="@dimen/dashboard_selector"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_dashboard_circle"
                    android:padding="10dp"
                    android:src="@drawable/obd"
                    android:tint="#000000"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/errorImageOBDAdapter"
                    android:layout_width="@dimen/dashboard_selector"
                    android:layout_height="@dimen/dashboard_selector"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_dashboard_circle"
                    android:padding="10dp"
                    android:src="@drawable/obd_nc"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/okImageOBDAdapter"
                    android:layout_width="@dimen/dashboard_selector"
                    android:layout_height="@dimen/dashboard_selector"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_dashboard_connected_circle"
                    android:padding="10dp"
                    android:src="@drawable/obd_connected"
                    android:tint="@color/common_google_signin_btn_text_dark_focused"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bannerGPSContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:padding="4dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/dashboard_selector"
                    android:layout_height="@dimen/dashboard_selector"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_dashboard_circle"
                    android:padding="10dp"
                    android:src="@drawable/gps"
                    android:tint="#000000"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/errorImageGPS"
                    android:layout_width="@dimen/dashboard_selector"
                    android:layout_height="@dimen/dashboard_selector"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_dashboard_circle"
                    android:padding="10dp"
                    android:src="@drawable/gps_off"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/okImageGPS"
                    android:layout_width="@dimen/dashboard_selector"
                    android:layout_height="@dimen/dashboard_selector"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_dashboard_connected_circle"
                    android:padding="10dp"
                    android:src="@drawable/gps_connected"
                    android:tint="@color/common_google_signin_btn_text_dark_focused"
                    android:visibility="gone" />

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bannerCarContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:padding="4dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/dashboard_selector"
                    android:layout_height="@dimen/dashboard_selector"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_dashboard_circle"
                    android:padding="10dp"
                    android:src="@drawable/ic_drive_eta_black_24dp"
                    android:tint="@color/common_google_signin_btn_text_dark_focused"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/errorImageCar"
                    android:layout_width="@dimen/dashboard_selector"
                    android:layout_height="@dimen/dashboard_selector"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_dashboard_circle"
                    android:padding="10dp"
                    android:src="@drawable/ic_drive_eta_black_24dp"
                    android:tint="@color/common_google_signin_btn_text_dark_focused"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/okImageCar"
                    android:layout_width="@dimen/dashboard_selector"
                    android:layout_height="@dimen/dashboard_selector"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_dashboard_connected_circle"
                    android:padding="10dp"
                    android:src="@drawable/ic_drive_eta_black_24dp"
                    android:tint="@color/common_google_signin_btn_text_dark_focused"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBanner">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/optionsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/disableChangingParametersLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/envirocar_color_divider_grey"
                android:clickable="true"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/CarOptions"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/obdOptions" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/obdOptions"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:paddingTop="@dimen/spacing_medium"
                android:paddingBottom="@dimen/spacing_medium"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/obdOptionsImg"
                    android:layout_width="@dimen/image_icon_s"
                    android:layout_height="@dimen/image_icon_s"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:src="@drawable/ic_bluetooth_searching_black_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/obdOptionsTxt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/roboto_medium"
                    android:singleLine="true"
                    android:text="No OBD Device Selected"
                    android:textColor="#000000"
                    android:textSize="@dimen/heading3"
                    app:layout_constraintBottom_toTopOf="@+id/obdOptionsTxt2"
                    app:layout_constraintStart_toStartOf="@+id/obdOptionsTxt2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/obdOptionsTxt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/roboto"
                    android:singleLine="true"
                    android:text="Car Attributes"
                    android:textColor="#000000"
                    android:textSize="@dimen/subtitle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/obdOptionsImg"
                    app:layout_constraintTop_toBottomOf="@+id/obdOptionsTxt1" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/GPSOptions"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingTop="@dimen/spacing_medium"
                android:paddingBottom="@dimen/spacing_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/obdOptions">

                <ImageView
                    android:id="@+id/GPSOptionsImg"
                    android:layout_width="@dimen/image_icon_s"
                    android:layout_height="@dimen/image_icon_s"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:src="@drawable/gps"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/GPSOptionsTxt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/roboto_medium"
                    android:singleLine="true"
                    android:text="GPS Not Turned On"
                    android:textColor="#000000"
                    android:textSize="@dimen/heading3"
                    app:layout_constraintBottom_toTopOf="@+id/GPSOptionsTxt2"
                    app:layout_constraintStart_toStartOf="@+id/GPSOptionsTxt2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/GPSOptionsTxt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/roboto"
                    android:singleLine="true"
                    android:text="Please turn on location services"
                    android:textColor="#000000"
                    android:textSize="@dimen/subtitle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/GPSOptionsImg"
                    app:layout_constraintTop_toBottomOf="@+id/GPSOptionsTxt1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/CarOptions"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingTop="@dimen/spacing_medium"
                android:paddingBottom="@dimen/spacing_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/GPSOptions">

                <ImageView
                    android:id="@+id/CarOptionsImg"
                    android:layout_width="@dimen/image_icon_s"
                    android:layout_height="@dimen/image_icon_s"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:src="@drawable/ic_drive_eta_black_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/CarOptionsTxt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/roboto_medium"
                    android:singleLine="true"
                    android:text="Manufacturer + Model"
                    android:textColor="#000000"
                    android:textSize="@dimen/heading3"
                    app:layout_constraintBottom_toTopOf="@+id/CarOptionsTxt2"
                    app:layout_constraintStart_toStartOf="@+id/CarOptionsTxt2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/CarOptionsTxt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/roboto"
                    android:singleLine="true"
                    android:text="Car Attributes"
                    android:textColor="#000000"
                    android:textSize="@dimen/subtitle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/CarOptionsImg"
                    app:layout_constraintTop_toBottomOf="@+id/CarOptionsTxt1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/startButton"
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_dark"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="18dp"
                android:paddingTop="12dp"
                android:paddingRight="18dp"
                android:paddingBottom="12dp"
                android:text="@string/dashboard_start_track"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_startOnboarding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CarOptions" />
            <Button
                android:id="@+id/btn_startOnboarding"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_margin="12dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_white"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="18dp"
                android:paddingTop="12dp"
                android:paddingRight="18dp"
                android:paddingBottom="12dp"
                android:text="Start Onboarding"
                android:textAllCaps="true"
                android:textColor="#0065A0"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>